<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ButtonGroup">
        <attr name="checkedButton" format="reference" />
        <attr name="measureWithLargestChild" format="boolean" />
    </declare-styleable>
    <declare-styleable name="GridLayout">
        <attr name="columnCount" format="integer" />
        <attr name="rowGap" format="dimension" />
        <attr name="columnGap" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CompoundImageButton">
        <attr name="buttonPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="TtfCapableView">
        <attr name="typeface" format="string" />
        <attr name="textAllCaps" format="boolean" />
    </declare-styleable>
    <declare-styleable name="FontIconView">
        <attr name="character" format="integer" />
        <attr name="color" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="BubbleSpinner">

        <!-- Declare the bubble popup -->
        <attr name="tipPosition" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="-1" />
            <enum name="right" value="1" />
        </attr>
        <attr name="tipBottomLength" format="float"/>
        <attr name="rectOffset" format="float" />
        <attr name="xRadius" format="float" />
        <attr name="yRadius" format="float" />
        <attr name="paddingLeftRight" format="integer"/>
        <attr name="customSelector" format="string"/>
    </declare-styleable>

</resources>